@model IEnumerable<RPG.Models.Item>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RPG</h2>
<hr />
<p>
    @Html.ActionLink("Add New Item", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sizeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.categoryId)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.name) --
            </td>
            <td>
                @Html.DisplayFor(model => item.sizeId) --
            </td>
            <td>
                @Html.DisplayFor(model => item.weight) --
            </td>
            <td>
                @Html.DisplayFor(model => item.categoryId) --
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id })
                @Html.ActionLink("Details", "Details", new { id = item.id })
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>

    }
</table>